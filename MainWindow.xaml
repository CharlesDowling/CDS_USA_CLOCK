        <Label Background="White" Width="300" Height="50" FontSize="18" Margin="10,170,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left">MST</Label>
        <Label Background="White" Width="300" Height="50" FontSize="18" Margin="315,170,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left">PST</Label>

    </Grid>
